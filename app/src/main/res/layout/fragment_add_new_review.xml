<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Review"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageStar1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/star_empty" />

        <ImageView
            android:id="@+id/imageStar2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/star_empty" />

        <ImageView
            android:id="@+id/imageStar3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/star_empty" />

        <ImageView
            android:id="@+id/imageStar4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/star_empty" />

        <ImageView
            android:id="@+id/imageStar5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/star_empty" />

    </LinearLayout>

    <EditText
        android:id="@+id/editTextComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutStars"
        android:layout_marginTop="16dp"
        android:hint="Enter your comment"
        android:maxLines="5"
        android:gravity="start"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/buttonAddReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextComment"
        android:layout_marginTop="16dp"
        android:text="Add Review" />

</RelativeLayout>
